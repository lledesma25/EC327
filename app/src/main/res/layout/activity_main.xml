<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lewis.helloworld.MainActivity">

    <TextView
        android:layout_width="99dp"
        android:layout_height="62dp"
        android:layout_marginBottom="268dp"
        android:text="Android Project"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/ToFindDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="viewMapActivity"
        android:text="To Map Activity"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/SpeedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:onClick="viewLocationActivity"
        android:text="To Speed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</android.support.constraint.ConstraintLayout>